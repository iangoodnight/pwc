{
  "extends": ["airbnb", "prettier"],
  "parserOptions": {
    "sourceType": "script",
    "ecmaFeatures": {
      "impliedStrict": false
    }
  },
  "plugins": ["prettier"],
  "root": true,
  "rules": {
    "no-console": "off",
    "prettier/prettier": ["error"],
    "spaced-comment": [
      "error",
      "always",
      {
        "exceptions": ["*"]
      }
    ],
    "strict": ["error", "global"]
  }
}
