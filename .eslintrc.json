{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "plugins": ["prettier"],
  "root": true,
  "rules": {
    "no-console": "off",
    "prettier/prettier": ["error"],
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "spaced-comment": [
      "error",
      "always",
      {
        "exceptions": ["*"]
      }
    ],
    "strict": ["error", "global"]
  }
}
